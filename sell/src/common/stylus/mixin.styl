border-1px($color)
  position:relative
  &:after
    display:block
    position:absolute
    left:0
    bottom:0
    //因为absolute所以要这只宽度
    width:100% 
    border-top:1px solid $color
    content:' '
//去掉最优一项子类不需要1PX的方法 
border-none()
    &:after
        display:none

//用来处理2x和3x图片的函数
bg-image($url)
    background-image:url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ration:3), (-webkit-min-device-pixel-ration:3)
        background-image:url($url + "@3x.png")